@page
@model IndexModel
@{
    ViewData["Title"] = "Головна";
}

<div class="text-center">
    <h1 class="text-2xl font-bold mb-4">Ласкаво просимо</h1>
    <p class="mb-6">Форма з даними</p>
    
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="bg-green-100 border border-green-300 text-green-700 p-4 rounded-lg mb-4 max-w-md mx-auto">
            <div class="flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                @Model.SuccessMessage
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 border border-red-300 text-red-700 p-4 rounded-lg mb-4 max-w-md mx-auto">
            <div class="flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                @Model.ErrorMessage
            </div>
        </div>
    }
    
    <div class="max-w-xs mx-auto">
        <div class="bg-white p-4 border rounded">
            <h2 class="font-semibold mb-2">Профіль</h2>
            <p class="mb-3 text-sm">Редагуйте свої дані</p>
            <a href="/Profile" class="block bg-blue-500 hover:bg-blue-600 text-white py-2 px-3 rounded">
                до профілю
            </a>
        </div>
    </div>
</div>